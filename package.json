{
  "name": "better-laravel-translator",
  "type": "module",
  "version": "1.0.1",
  "description": "Enhanced Laravel localization for your frontend with glob patterns and module namespacing",
  "keywords": [
    "laravel",
    "laravel-translator",
    "localization",
    "i18n",
    "internationalization",
    "translation",
    "vite",
    "vite-plugin",
    "glob",
    "vue",
    "typescript"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "require": "./dist/*.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "vite": [
        "dist/vite.d.ts"
      ]
    }
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "build": "tsup ./src --external virtual-laravel-translations,vue --format cjs,esm --dts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run test:run && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpkontreras/better-laravel-translator.git"
  },
  "author": "jpkontreras",
  "contributors": [
    "Sergio Brighenti (original laravel-translator)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpkontreras/better-laravel-translator/issues"
  },
  "homepage": "https://github.com/jpkontreras/better-laravel-translator#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.2.8",
    "vitest": "^1.0.0",
    "vue": "^3.4.27"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "php-parser": "^3.1.5"
  },
  "peerDependencies": {
    "vite": ">=4.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}
